<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="750.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.northeastern.lms.books.LMSController">
    <children>
        <Text layoutX="30.0" layoutY="69.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add new book" textAlignment="CENTER" wrappingWidth="149.0">
            <font>
                <Font name="System Bold" size="19.0" />
            </font>
        </Text>
        <TextField fx:id="author" layoutX="464.0" layoutY="100.0" promptText="Author name" />
        <TextField fx:id="book" layoutX="99.0" layoutY="101.0" promptText="Book name" />
        <TextField fx:id="isbn" layoutX="99.0" layoutY="155.0" promptText="ISBN" />
        <TextField fx:id="category" layoutX="464.0" layoutY="155.0" promptText="Category" />
        <TextArea fx:id="description" layoutX="133.0" layoutY="264.0" prefHeight="200.0" prefWidth="493.0" promptText="Description" wrapText="true" />
        <TextField fx:id="year" layoutX="99.0" layoutY="211.0" promptText="Year Published" />
        <TextField fx:id="price" layoutX="464.0" layoutY="211.0" promptText="Price" text="\$" />

        <Button layoutX="296.0" layoutY="519.0" mnemonicParsing="false" onAction="#addItem" text="Add book">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Text layoutX="14.0" layoutY="587.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Books" wrappingWidth="265.0">
            <font>
                <Font name="System Bold" size="19.0" />
            </font>
        </Text>
        <TextField fx:id="search" layoutX="624.0" layoutY="50.0" onKeyTyped="#searchBook" prefHeight="31.0" prefWidth="162.0" promptText="Search..." />
        <Button fx:id="edit" layoutX="809.0" layoutY="47.0" mnemonicParsing="false" onAction="#editBook" text="Edit">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Button fx:id="delete" layoutX="871.0" layoutY="47.0" mnemonicParsing="false" onAction="#deleteBook" text="Delete">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
      <HBox layoutX="2.0" layoutY="594.0" prefHeight="142.0" prefWidth="652.0">
         <children>
            <TableView prefHeight="142.0" prefWidth="644.0">
              <columns>
                <TableColumn prefWidth="520.0" text="Name" />
                <TableColumn id="TableView" editable="false" minWidth="0.0" prefWidth="107.0" text="ISBN" />
              </columns>
            </TableView>
         </children>
      </HBox>
      <Label layoutX="377.0" layoutY="105.0" prefHeight="17.0" prefWidth="72.0" text="Author" />
      <Label layoutX="38.0" layoutY="105.0" prefHeight="17.0" prefWidth="52.0" text="Name" />
      <Label layoutX="38.0" layoutY="159.0" prefHeight="17.0" prefWidth="52.0" text="ISBN" />
      <Label layoutX="377.0" layoutY="159.0" prefHeight="17.0" prefWidth="52.0" text="Category" />
      <Label layoutX="38.0" layoutY="216.0" prefHeight="17.0" prefWidth="45.0" text="Year" />
      <Label layoutX="377.0" layoutY="216.0" prefHeight="17.0" prefWidth="52.0" text="Price" />
      <Label layoutX="38.0" layoutY="275.0" prefHeight="17.0" prefWidth="72.0" text="Description" />
        <ListView fx:id="booksList" layoutX="38.0" layoutY="480.0" prefHeight="79.0" prefWidth="537.0" stylesheets="@listview.css" />
    </children>
</AnchorPane>
